@model BrowserVA_Enhanced.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}
<style>
    .registration_form
    {
        opacity: 1 !important;
        width:20% !important;
        margin-left:40%;
    }
    #content form .submit, .login_content form input[type=submit] {
    float: left;
    margin-left: 27% !important;
}
</style>
<div id="register" class="animate form registration_form">
    <section class="login_content">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {  role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
          
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email Address" })
              
            </div>
          
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                     </div>
          
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
        
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
            <br />
            <br />
             <div class="separator">
                <p class="change_link">Already a member ?
                  <a href="@Url.Action("Login", "Account")" class="to_register"> Log in </a>
                </p>

                <div class="clearfix"></div>
               </div>
        }
    </section>
</div>

