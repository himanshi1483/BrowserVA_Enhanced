@using BrowserVA_Enhanced.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!-- Bootstrap -->
<link href="~/ThemeFiles/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="~/ThemeFiles/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
<!-- NProgress -->
<link href="~/ThemeFiles/vendors/nprogress/nprogress.css" rel="stylesheet">
<!-- Animate.css -->
<link href="~/ThemeFiles/vendors/animate.css/animate.min.css" rel="stylesheet">
<!-- Custom Theme Style -->
<link href="~/ThemeFiles/build/css/custom.min.css" rel="stylesheet">
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <a class="hiddenanchor" id="signup"></a>
            <a class="hiddenanchor" id="signin"></a>
            <div class="login_wrapper">
                <div class="animate form login_form">
                    <h1 style="font-size:33px">Tableau Voice Assistant</h1>
                    <section class="login_content">
                        <form>

                            <h1>Sign In</h1>
                            <div class="form-group">

                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email Address" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                            </div>
                            @*<div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe)
                                        </div>
                                    </div>
                                </div>*@
                            <div class="form-group">

                                <input type="submit" value="Log in" class="btn btn-default" />

                            </div>
                            @*<div>
                                    <a class="btn btn-default submit" href="index.html">Log in</a>
                                    <a class="reset_pass" href="#">Lost your password?</a>
                                </div>*@
                            <div class="clearfix"></div>
                            <div class="separator">
                                <p class="change_link">
                                    New to site?
                                    @Html.ActionLink("Register as a new user", "Register", new { @class = "to_register" })
                                    @*<a href="#signup" class="to_register"> Create Account </a>*@
                                </p>
                                <div class="clearfix"></div>
                                <br />

                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    }
</section>
