        }
    })();

    function saveUrl() {
        var url = $("#tableauURL").val();
        var name = $("#dashboardTitle").text();
    $.ajax({
        type: "POST",
        url: "@Url.Action("Index", "Home")",
        content: "application/json; charset=utf-8",
        dataType: "json",
        data: { "url": url, "name": name },
        success: function (d) {
            if (d.success == true)
                window.location.reload();
            else { }
        },
        error: function (xhr, textStatus, errorThrown) {
            // TODO: Show error
